{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "es2020"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".", // Оставляем baseUrl в корне
    "paths": {
      "@/*": ["./next/*"] // Указываем, что @/ ведет в папку next
    }
  },
  // Также нужно обновить пути в include, чтобы они были относительны корня
  "include": [
    "./next/app",
    "./next/components",
    "./next/lib",
    "./next/public",
    "./next/types"
  ]
}
